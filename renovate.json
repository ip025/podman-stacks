{
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "docker-compose",
    "kubernetes"
  ],
  "kubernetes": {
    "managerFilePatterns": ["/\\.yaml$/"]
  },
  "assignees": [
    "ip025"
  ],
  "ignorePaths": [
    "deprecated/**"
  ],
  "packageRules": [
    {
      "description": "Keep Mongo within major v4 in unifi stack",
      "matchManagers": [
        "docker-compose"
      ],
      "matchDatasources": [
        "docker"
      ],
      "matchPaths": [
        "unifi/**"
      ],
      "matchPackageNames": [
        "mongo"
      ],
      "allowedVersions": "<5.0.0"
    }
  ]
}
