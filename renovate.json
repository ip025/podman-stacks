{
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "docker-compose"
  ],
  "assignees": [
    "ip025"
  ],
  "packageRules": [
    {
      "description": "Keep MariaDB in unifi stack within major v4",
      "matchPaths": [
        "unifi/**"
      ],
      "matchDatasources": [
        "docker-compose"
      ],
      "matchPackageNames": [
        "mongo"
      ],
      "allowedVersions": "<5.0.0"
    }
  ]
}